# Email Configuration for Notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=rfp-monitor@formalogix.com

# Notification Recipients (comma-separated)
NOTIFICATION_EMAILS=info@formalogix.com,sales@formalogix.com

# TED API Configuration (if using API access)
TED_API_KEY=your-ted-api-key-if-available

# Monitoring Settings
ENABLE_DAILY_DIGEST=true
ENABLE_IMMEDIATE_ALERTS=true
SCAN_TIME=09:00

# Minimum tender value to monitor (EUR)
MIN_TENDER_VALUE=10000

# Log level (debug, info, warn, error)
LOG_LEVEL=info
