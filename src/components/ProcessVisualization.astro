---
// Enhanced 3D visualization: Paper form → Formalogix → Structured data
---

<div class="flex items-center justify-center gap-2 md:gap-4 scale-90 md:scale-100">
	<!-- Left: Paper form stack with 3D effect -->
	<div class="relative">
		<!-- Shadow/stack papers for depth -->
		<div
			class="absolute w-32 h-48 md:w-44 md:h-60 bg-stone-200 rounded-sm"
			style="transform: rotate(-3deg); top: 6px; left: 6px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);"
		></div>
		<div
			class="absolute w-32 h-48 md:w-44 md:h-60 bg-stone-100 rounded-sm"
			style="transform: rotate(-1deg); top: 3px; left: 3px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);"
		></div>

		<!-- Main paper with gradient -->
		<div
			class="relative w-32 h-48 md:w-44 md:h-60 rounded-sm overflow-hidden"
			style="background: linear-gradient(180deg, #fefdfb 0%, #f9f7f4 100%); box-shadow: 0 4px 20px rgba(0,0,0,0.15), 0 0 0 1px rgba(0,0,0,0.05); transform: rotate(0.5deg);"
		>
			<!-- Form content -->
			<div class="relative p-2 md:p-4 pb-4 md:pb-6 space-y-2 md:space-y-3">
				<!-- Name field -->
				<div>
					<div class="text-[10px] text-stone-400 mb-0.5">Name:</div>
					<div class="border-b border-stone-300 pb-0.5">
						<span
							class="text-sm md:text-base text-indigo-900 italic"
							style="font-family: Georgia, serif;"
						>
							Max Müller
						</span>
					</div>
				</div>

				<!-- Date field -->
				<div>
					<div class="text-[10px] text-stone-400 mb-0.5">Datum:</div>
					<div class="border-b border-stone-300 pb-0.5">
						<span
							class="text-sm md:text-base text-indigo-900 italic"
							style="font-family: Georgia, serif;"
						>
							15.01.2026
						</span>
					</div>
				</div>

				<!-- Checkbox with checkmark -->
				<div class="flex items-center gap-2 pt-1">
					<div class="w-3.5 h-3.5 md:w-4 md:h-4 border-2 border-stone-400 rounded-sm flex items-center justify-center bg-white">
						<svg class="w-2.5 h-2.5 md:w-3 md:h-3 text-indigo-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
							<path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
						</svg>
					</div>
					<span class="text-[10px] md:text-xs text-stone-500">Zustimmung</span>
				</div>

				<!-- Signature field -->
				<div>
					<div class="text-[10px] text-stone-400 mb-0.5">Unterschrift:</div>
					<div class="border-b border-stone-300 h-6 md:h-8 flex items-end pb-0.5">
						<svg viewBox="0 0 140 30" class="w-16 md:w-24 h-5 md:h-6 text-indigo-900 opacity-80">
							<path
								d="M5,22 Q12,8 25,18 T50,14 Q65,10 75,16 T100,12 Q115,8 130,14"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
							/>
						</svg>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Middle: Data flow particles -->
	<div class="relative w-16 h-12 md:w-20 md:h-16 overflow-hidden">
		<div class="particle particle-1"></div>
		<div class="particle particle-2"></div>
		<div class="particle particle-3"></div>
	</div>

	<!-- Right: Excel-style table -->
	<div
		class="rounded-lg overflow-hidden"
		style="box-shadow: 0 4px 20px rgba(0,0,0,0.12);"
	>
		<!-- Green header bar -->
		<div class="bg-gradient-to-r from-green-600 to-green-500 px-4 py-1.5 md:py-2"></div>

		<!-- Data table -->
		<table class="text-[10px] md:text-xs bg-white">
			<thead>
				<tr class="bg-green-50 border-b border-green-200">
					<th class="px-2 md:px-3 py-1.5 md:py-2 text-left font-semibold text-green-800">Name</th>
					<th class="px-2 md:px-3 py-1.5 md:py-2 text-left font-semibold text-green-800">Datum</th>
					<th class="px-2 md:px-3 py-1.5 md:py-2 text-center font-semibold text-green-800">Zust.</th>
					<th class="px-2 md:px-3 py-1.5 md:py-2 text-center font-semibold text-green-800">Sign.</th>
				</tr>
			</thead>
			<tbody>
				<tr class="border-b border-stone-100">
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-stone-600 whitespace-nowrap">Anna Schmidt</td>
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-stone-500 whitespace-nowrap">12.01.2026</td>
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-center text-green-500 font-bold">✓</td>
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-center text-green-500 font-bold">✓</td>
				</tr>
				<tr class="border-b border-stone-100 bg-amber-50">
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-stone-800 font-medium whitespace-nowrap">Max Müller</td>
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-stone-600 whitespace-nowrap">15.01.2026</td>
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-center text-green-500 font-bold">✓</td>
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-center text-green-500 font-bold">✓</td>
				</tr>
				<tr>
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-stone-600 whitespace-nowrap">Lisa Weber</td>
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-stone-500 whitespace-nowrap">15.01.2026</td>
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-center text-green-500 font-bold">✓</td>
					<td class="px-2 md:px-3 py-1.5 md:py-2 text-center text-red-500 font-bold">✗</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>

<style>
	.particle {
		position: absolute;
		width: 4px;
		height: 4px;
		background: #3B82F6;
		border-radius: 50%;
		opacity: 0;
	}

	@media (min-width: 768px) {
		.particle {
			width: 5px;
			height: 5px;
		}
	}

	.particle-1 {
		top: 30%;
		animation: flow 3.5s ease-in-out infinite;
	}

	.particle-2 {
		top: 50%;
		animation: flow 3.5s ease-in-out infinite 1.2s;
	}

	.particle-3 {
		top: 70%;
		animation: flow 3.5s ease-in-out infinite 2.4s;
	}

	@keyframes flow {
		0% {
			left: 0;
			opacity: 0;
		}
		10% {
			opacity: 0.6;
		}
		90% {
			opacity: 0.6;
		}
		100% {
			left: 100%;
			opacity: 0;
		}
	}
</style>
