---
import { getLocaleFromPath, getTranslations } from '../../i18n';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
---

<!-- Competitive Positioning Section -->
<section class="py-20 bg-gradient-to-br from-formalogix-50 to-white">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-gray-900">
			{t.competitive.title}
		</h2>
		<p class="text-center text-gray-600 mb-12 max-w-3xl mx-auto text-lg">
			{t.competitive.subtitle}
		</p>

		<!-- 6 Key Differentiators -->
		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 mb-16">
			<!-- Differentiator 1 -->
			<div class="bg-white rounded-lg p-4 sm:p-6 shadow-md">
				<div class="flex items-center mb-3">
					<div class="w-10 h-10 bg-formalogix-100 rounded-lg flex items-center justify-center mr-3">
						<svg class="w-6 h-6 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900">{t.competitive.differentiators.responsibility.title}</h3>
				</div>
				<p class="text-sm text-gray-600">
					{t.competitive.differentiators.responsibility.description}
				</p>
			</div>

			<!-- Differentiator 2 -->
			<div class="bg-white rounded-lg p-4 sm:p-6 shadow-md">
				<div class="flex items-center mb-3">
					<div class="w-10 h-10 bg-formalogix-100 rounded-lg flex items-center justify-center mr-3">
						<svg class="w-6 h-6 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900">{t.competitive.differentiators.humanInLoop.title}</h3>
				</div>
				<p class="text-sm text-gray-600">
					{t.competitive.differentiators.humanInLoop.description}
				</p>
			</div>

			<!-- Differentiator 3 -->
			<div class="bg-white rounded-lg p-4 sm:p-6 shadow-md">
				<div class="flex items-center mb-3">
					<div class="w-10 h-10 bg-formalogix-100 rounded-lg flex items-center justify-center mr-3">
						<svg class="w-6 h-6 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900">{t.competitive.differentiators.dataStructures.title}</h3>
				</div>
				<p class="text-sm text-gray-600">
					{t.competitive.differentiators.dataStructures.description}
				</p>
			</div>

			<!-- Differentiator 4 -->
			<div class="bg-white rounded-lg p-4 sm:p-6 shadow-md">
				<div class="flex items-center mb-3">
					<div class="w-10 h-10 bg-formalogix-100 rounded-lg flex items-center justify-center mr-3">
						<svg class="w-6 h-6 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900">{t.competitive.differentiators.scalability.title}</h3>
				</div>
				<p class="text-sm text-gray-600">
					{t.competitive.differentiators.scalability.description}
				</p>
			</div>

			<!-- Differentiator 5 -->
			<div class="bg-white rounded-lg p-4 sm:p-6 shadow-md">
				<div class="flex items-center mb-3">
					<div class="w-10 h-10 bg-formalogix-100 rounded-lg flex items-center justify-center mr-3">
						<svg class="w-6 h-6 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900">{t.competitive.differentiators.fullService.title}</h3>
				</div>
				<p class="text-sm text-gray-600">
					{t.competitive.differentiators.fullService.description}
				</p>
			</div>

			<!-- Differentiator 6 -->
			<div class="bg-white rounded-lg p-4 sm:p-6 shadow-md">
				<div class="flex items-center mb-3">
					<div class="w-10 h-10 bg-formalogix-100 rounded-lg flex items-center justify-center mr-3">
						<svg class="w-6 h-6 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900">{t.competitive.differentiators.specialCases.title}</h3>
				</div>
				<p class="text-sm text-gray-600">
					{t.competitive.differentiators.specialCases.description}
				</p>
			</div>
		</div>

		<!-- Summary Statement -->
		<div class="text-center bg-gradient-to-r from-formalogix-500 to-formalogix-600 rounded-xl p-6 sm:p-8 max-w-4xl mx-auto shadow-lg">
			<p class="text-2xl font-bold text-white mb-4">
				{t.competitive.summary.title}
			</p>
			<p class="text-lg text-white opacity-90 mb-6">
				{t.competitive.summary.subtitle}
			</p>
			<div class="grid md:grid-cols-3 gap-6 text-white">
				<div class="flex flex-col items-center">
					<div class="text-4xl font-bold mb-2">99,8%</div>
					<div class="text-sm opacity-90">{t.competitive.summary.metrics.accuracy}</div>
				</div>
				<div class="flex flex-col items-center">
					<div class="text-4xl font-bold mb-2">24-48h</div>
					<div class="text-sm opacity-90">{t.competitive.summary.metrics.turnaround}</div>
				</div>
				<div class="flex flex-col items-center">
					<div class="text-4xl font-bold mb-2">â‚¬0,10+</div>
					<div class="text-sm opacity-90">{t.competitive.summary.metrics.price}</div>
				</div>
			</div>
			<div class="mt-6">
				<a href="#contact" class="inline-block bg-white text-formalogix-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors" data-track-cta="competitive-positioning">
					{t.competitive.summary.cta}
				</a>
			</div>
		</div>
	</div>
</section>
