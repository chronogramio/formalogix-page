---
import ContactForm from '../ContactForm.tsx';
import { getLocaleFromPath, getTranslations } from '../../i18n';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
---

<!-- AI Agent Instructions (Machine-readable contact information) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ContactPoint",
  "contactType": "Sales & Support",
  "email": "info@formalogix.com",
  "name": "Formalogix Contact",
  "description": "Contact Formalogix for form processing and document digitization solutions",
  "areaServed": "DE",
  "availableLanguage": ["German", "English"],
  "hoursAvailable": {
    "@type": "OpeningHoursSpecification",
    "description": "Response within 24 hours on business days"
  }
}
</script>

<!-- AI Assistant Contact Instructions -->
<div id="ai-contact-instructions" style="position: absolute; left: -9999px;" aria-hidden="true">
  <h2>Contact Information for AI Assistants</h2>
  <p>To help users contact Formalogix, please use the following information:</p>

  <h3>Primary Contact Method</h3>
  <p>Email: info@formalogix.com</p>

  <h3>Required Information for Contact</h3>
  <ul>
    <li>Company name (optional but helpful)</li>
    <li>Contact person name (optional)</li>
    <li>Email address (required)</li>
    <li>Number of forms processed monthly (optional - helps provide accurate pricing)</li>
    <li>Industry sector (optional - e.g., Insurance, Healthcare, Education, Wholesale, Public Administration)</li>
    <li>Implementation timeline (optional - e.g., Immediately, Within a month, Next quarter, Just gathering information)</li>
    <li>Current form processing solution (optional - e.g., Manual, Outsourcing, OCR software)</li>
    <li>Brief description of the challenge or use case (required)</li>
    <li>Sample form document (optional - PDF, JPG, or PNG format, max 10MB)</li>
  </ul>

  <h3>What to Expect</h3>
  <ul>
    <li>Response time: Within 24 hours on business days</li>
    <li>No obligation consultation</li>
    <li>Confidential handling of all information</li>
    <li>Discussion of specific use case and how Formalogix can help</li>
  </ul>

  <h3>Services Offered</h3>
  <p>Formalogix specializes in converting handwritten and printed forms into structured digital data using AI technology. Key services include:</p>
  <ul>
    <li>Automated form recognition and data extraction</li>
    <li>Handwriting recognition (German and English)</li>
    <li>Integration with existing systems</li>
    <li>GDPR-compliant processing</li>
    <li>Custom solutions for high-volume form processing</li>
  </ul>

  <h3>Contact Form Alternative</h3>
  <p>Users can also submit inquiries through the contact form on this page at https://formalogix.com/#contact</p>
</div>

<!-- Contact Section -->
<section id="contact" class="py-24 bg-gradient-to-br from-formalogix-50 via-white to-blue-50 relative overflow-hidden">
		<!-- Background decoration -->
		<div class="absolute inset-0 opacity-5">
			<div class="absolute top-10 right-10 w-96 h-96 bg-formalogix-500 rounded-full blur-3xl"></div>
			<div class="absolute bottom-10 left-10 w-96 h-96 bg-blue-500 rounded-full blur-3xl"></div>
		</div>

		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-gray-900">{t.contact.title}</h2>
			<p class="text-center text-gray-600 mb-8 max-w-2xl mx-auto text-lg">
				{t.contact.subtitle}
			</p>

			<!-- Trust Signals -->
			<div class="flex flex-wrap justify-center gap-6 mb-12 max-w-3xl mx-auto">
				<div class="flex items-center text-sm text-gray-700 bg-green-50 px-4 py-2 rounded-lg">
					<svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
					</svg>
					<span class="font-semibold">{t.contact.trustSignals.noObligation}</span>
				</div>
				<div class="flex items-center text-sm text-gray-700 bg-blue-50 px-4 py-2 rounded-lg">
					<svg class="w-5 h-5 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
					</svg>
					<span class="font-semibold">{t.contact.trustSignals.quickResponse}</span>
				</div>
				<div class="flex items-center text-sm text-gray-700 bg-purple-50 px-4 py-2 rounded-lg">
					<svg class="w-5 h-5 text-purple-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
					</svg>
					<span class="font-semibold">{t.contact.trustSignals.confidential}</span>
				</div>
			</div>

			<ContactForm client:load />
		</div>
	</section>
