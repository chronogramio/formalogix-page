---
import { getLocaleFromPath, getTranslations } from '../../i18n';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
---

<!-- Efficiency Comparison Section -->
<section class="py-20 bg-white">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-gray-900">
			{t.efficiencyComparison.title}
		</h2>
		<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
			{t.efficiencyComparison.subtitle}
		</p>

		<div class="grid md:grid-cols-2 gap-8 mb-8">
			<!-- Manual Processing -->
			<div class="bg-slate-50 border-2 border-slate-200 rounded-xl p-8">
				<div class="flex items-center mb-6">
					<svg class="w-8 h-8 text-slate-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
					</svg>
					<h3 class="text-2xl font-bold text-gray-900">{t.efficiencyComparison.manual.title}</h3>
				</div>
				<ul class="space-y-3 mb-6">
					<li class="flex items-start">
						<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.manual.points.time}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.manual.points.errors}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.manual.points.resources}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.manual.points.availability}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.manual.points.scalability}</strong></span>
					</li>
				</ul>
			</div>

			<!-- Formalogix Automated (Solution) -->
			<div class="bg-blue-50 border-2 border-blue-200 rounded-xl p-8">
				<div class="flex items-center mb-6">
					<svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
					</svg>
					<h3 class="text-2xl font-bold text-gray-900">{t.efficiencyComparison.automated.title}</h3>
				</div>
				<ul class="space-y-3 mb-6">
					<li class="flex items-start">
						<svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.automated.points.time}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.automated.points.accuracy}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.automated.points.resources}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.automated.points.availability}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.automated.points.scalability}</strong></span>
					</li>
				</ul>
			</div>
		</div>

		<div class="text-center">
			<a
				href="#contact"
				class="btn-primary inline-block"
				data-track-cta="efficiency-comparison"
				onclick="if(window.umami) window.umami.track('cta-efficiency-comparison-clicked', {destination: 'contact'});"
			>
				{t.efficiencyComparison.cta}
			</a>
		</div>
	</div>
</section>
