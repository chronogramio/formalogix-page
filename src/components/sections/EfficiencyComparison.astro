---
import { getLocaleFromPath, getTranslations } from '../../i18n';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
---

<!-- Efficiency Comparison Section -->
<section class="py-20 bg-gradient-to-br from-gray-50 via-white to-blue-50">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-gray-900">
			{t.efficiencyComparison.title}
		</h2>
		<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
			{t.efficiencyComparison.subtitle}
		</p>

		<div class="grid md:grid-cols-2 gap-12 mb-8 relative">
			<!-- VS Badge -->
			<div class="hidden md:flex absolute left-1/2 top-1/3 -translate-x-1/2 -translate-y-1/2 z-20 bg-gradient-to-br from-white to-gray-50 rounded-full w-20 h-20 items-center justify-center shadow-2xl border-4 border-gray-300 font-bold text-gray-800 text-lg">
				VS
			</div>

			<!-- Manual Processing -->
			<div class="bg-slate-100 border-4 border-slate-400 rounded-xl p-8 shadow-inner">
				<div class="flex items-center mb-6">
					<svg class="w-8 h-8 text-slate-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
					</svg>
					<h3 class="text-2xl font-bold text-gray-900">{t.efficiencyComparison.manual.title}</h3>
				</div>
				<ul class="space-y-3 mb-6">
					<li class="flex items-start">
						<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.manual.points.time}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.manual.points.errors}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.manual.points.resources}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.manual.points.availability}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 000 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.manual.points.scalability}</strong></span>
					</li>
				</ul>
			</div>

			<!-- Formalogix Automated (Solution) -->
			<div class="bg-gradient-to-br from-blue-50 to-formalogix-100 border-4 border-formalogix-500 rounded-xl p-8 shadow-lg shadow-formalogix-200/50">
				<div class="flex items-center mb-6">
					<svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
					</svg>
					<h3 class="text-2xl font-bold text-gray-900">{t.efficiencyComparison.automated.title}</h3>
				</div>
				<ul class="space-y-3 mb-6">
					<li class="flex items-start">
						<svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"/>
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.automated.points.time}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.automated.points.accuracy}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path d="M13 7H7v6h6V7z"/>
							<path fill-rule="evenodd" d="M7 2a1 1 0 012 0v1h2V2a1 1 0 112 0v1h2a2 2 0 012 2v2h1a1 1 0 110 2h-1v2h1a1 1 0 110 2h-1v2a2 2 0 01-2 2h-2v1a1 1 0 11-2 0v-1H9v1a1 1 0 11-2 0v-1H5a2 2 0 01-2-2v-2H2a1 1 0 110-2h1V9H2a1 1 0 010-2h1V5a2 2 0 012-2h2V2z" clip-rule="evenodd"/>
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.automated.points.resources}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.automated.points.availability}</strong></span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"/>
						</svg>
						<span class="text-gray-700"><strong>{t.efficiencyComparison.automated.points.scalability}</strong></span>
					</li>
				</ul>
			</div>
		</div>

		<div class="text-center">
			<a
				href="#services"
				class="btn-primary inline-block"
				data-track-cta="efficiency-comparison"
				onclick="if(window.umami) window.umami.track('cta-efficiency-comparison-clicked', {destination: 'services'});"
			>
				{t.efficiencyComparison.cta}
			</a>
		</div>
	</div>
</section>
