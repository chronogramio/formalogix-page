---
import { getLocaleFromPath, getTranslations } from '../../i18n';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
---

<style>
	details {
		display: block;
		width: 100%;
	}
	summary {
		display: flex;
		width: 100%;
	}
</style>

<!-- FAQ Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify({
	"@context": "https://schema.org",
	"@type": "FAQPage",
	"mainEntity": [
		{
			"@type": "Question",
			"name": t.faq.questions.pricing.question,
			"acceptedAnswer": {
				"@type": "Answer",
				"text": t.faq.questions.pricing.answer
			}
		},
		{
			"@type": "Question",
			"name": t.faq.questions.outsourcing.question,
			"acceptedAnswer": {
				"@type": "Answer",
				"text": t.faq.questions.outsourcing.answer
			}
		},
		{
			"@type": "Question",
			"name": t.faq.questions.security.question,
			"acceptedAnswer": {
				"@type": "Answer",
				"text": t.faq.questions.security.answer
			}
		},
		{
			"@type": "Question",
			"name": t.faq.questions.implementation.question,
			"acceptedAnswer": {
				"@type": "Answer",
				"text": t.faq.questions.implementation.answer
			}
		},
		{
			"@type": "Question",
			"name": t.faq.questions.aiFailure.question,
			"acceptedAnswer": {
				"@type": "Answer",
				"text": t.faq.questions.aiFailure.answer
			}
		},
		{
			"@type": "Question",
			"name": t.faq.questions.formTypes.question,
			"acceptedAnswer": {
				"@type": "Answer",
				"text": t.faq.questions.formTypes.answer
			}
		}
	]
})} />

<!-- FAQ Section -->
<section class="min-h-screen py-24 bg-white flex flex-col justify-center">
	<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
		<h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-gray-900">
			{t.faq.title}
		</h2>
		<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
			{t.faq.subtitle}
		</p>

		<div class="grid grid-cols-1 gap-6">
			<!-- FAQ 1 -->
			<details class="block w-full bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow group">
				<summary class="w-full font-semibold text-lg text-gray-900 cursor-pointer list-none flex justify-between items-center">
					<span class="flex-1">{t.faq.questions.pricing.question}</span>
					<svg class="w-5 h-5 text-formalogix-500 transform group-open:rotate-180 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
					</svg>
				</summary>
				<div class="mt-4 text-gray-600 leading-relaxed">
					<p>{t.faq.questions.pricing.answer}</p>
				</div>
			</details>

			<!-- FAQ 2 -->
			<details class="block w-full bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow group">
				<summary class="w-full font-semibold text-lg text-gray-900 cursor-pointer list-none flex justify-between items-center">
					<span class="flex-1">{t.faq.questions.outsourcing.question}</span>
					<svg class="w-5 h-5 text-formalogix-500 transform group-open:rotate-180 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
					</svg>
				</summary>
				<div class="mt-4 text-gray-600 leading-relaxed">
					<p>{t.faq.questions.outsourcing.answer}</p>
				</div>
			</details>

			<!-- FAQ 3 -->
			<details class="block w-full bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow group">
				<summary class="w-full font-semibold text-lg text-gray-900 cursor-pointer list-none flex justify-between items-center">
					<span class="flex-1">{t.faq.questions.security.question}</span>
					<svg class="w-5 h-5 text-formalogix-500 transform group-open:rotate-180 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
					</svg>
				</summary>
				<div class="mt-4 text-gray-600 leading-relaxed">
					<p>{t.faq.questions.security.answer}</p>
				</div>
			</details>

			<!-- FAQ 4 -->
			<details class="block w-full bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow group">
				<summary class="w-full font-semibold text-lg text-gray-900 cursor-pointer list-none flex justify-between items-center">
					<span class="flex-1">{t.faq.questions.implementation.question}</span>
					<svg class="w-5 h-5 text-formalogix-500 transform group-open:rotate-180 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
					</svg>
				</summary>
				<div class="mt-4 text-gray-600 leading-relaxed">
					<p>{t.faq.questions.implementation.answer}</p>
				</div>
			</details>

			<!-- FAQ 5 -->
			<details class="block w-full bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow group">
				<summary class="w-full font-semibold text-lg text-gray-900 cursor-pointer list-none flex justify-between items-center">
					<span class="flex-1">{t.faq.questions.aiFailure.question}</span>
					<svg class="w-5 h-5 text-formalogix-500 transform group-open:rotate-180 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
					</svg>
				</summary>
				<div class="mt-4 text-gray-600 leading-relaxed">
					<p>{t.faq.questions.aiFailure.answer}</p>
				</div>
			</details>

			<!-- FAQ 6 -->
			<details class="block w-full bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow group">
				<summary class="w-full font-semibold text-lg text-gray-900 cursor-pointer list-none flex justify-between items-center">
					<span class="flex-1">{t.faq.questions.formTypes.question}</span>
					<svg class="w-5 h-5 text-formalogix-500 transform group-open:rotate-180 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
					</svg>
				</summary>
				<div class="mt-4 text-gray-600 leading-relaxed">
					<p>{t.faq.questions.formTypes.answer}</p>
				</div>
			</details>
		</div>

		<div class="mt-12 text-center">
			<p class="text-gray-600 mb-6">{t.faq.ctaQuestion}</p>
			<button class="btn-primary inline-block open-contact-modal-btn" data-track-cta="faq-cta" onclick="window.dispatchEvent(new CustomEvent('openContactModal'));">
				{t.faq.cta}
			</button>
		</div>
	</div>
</section>
