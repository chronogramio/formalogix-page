---
import { getLocaleFromPath, getTranslations } from '../../i18n';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);

function getLink(path: string) {
	if (locale === 'en') {
		return `/en${path}`;
	}
	return path;
}
---

<!-- Footer -->
<footer class="bg-gray-900 text-white py-12">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid md:grid-cols-4 gap-8">
			<div>
				<h3 class="text-xl font-bold mb-4">formalogix</h3>
				<p class="text-gray-400 text-sm">
					{t.footerContent.description}
				</p>
			</div>
			<div>
				<h4 class="font-semibold mb-4">{t.footerContent.sections.services}</h4>
				<ul class="space-y-2 text-sm">
					<li><a href="#services" class="text-gray-400 hover:text-white transition-colors">{t.footerContent.links.selfService}</a></li>
					<li><a href="#services" class="text-gray-400 hover:text-white transition-colors">{t.footerContent.links.fullService}</a></li>
					<li><a href="#services" class="text-gray-400 hover:text-white transition-colors">{t.footerContent.links.enterprise}</a></li>
				</ul>
			</div>
			<div>
				<h4 class="font-semibold mb-4">{t.footerContent.sections.resources}</h4>
				<ul class="space-y-2 text-sm">
					<li><a href="#usecases" class="text-gray-400 hover:text-white transition-colors">{t.footerContent.links.useCases}</a></li>
					<li><a href="#pricing" class="text-gray-400 hover:text-white transition-colors">{t.footerContent.links.pricing}</a></li>
					<li><a href="https://app.formalogix.com" class="text-gray-400 hover:text-white transition-colors">{t.footerContent.links.launchApp}</a></li>
				</ul>
			</div>
			<div>
				<h4 class="font-semibold mb-4">{t.footerContent.sections.contact}</h4>
				<ul class="space-y-2 text-sm">
					<li><a href="#contact" class="text-gray-400 hover:text-white transition-colors">{t.footerContent.links.submitRequest}</a></li>
					<li><a href="mailto:info@formalogix.com" class="text-gray-400 hover:text-white transition-colors">info@formalogix.com</a></li>
				</ul>
			</div>
		</div>

		<!-- Trust Elements Section -->
		<div class="border-t border-gray-800 mt-8 pt-8">
			<div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center mb-8">
				<div>
					<div class="text-formalogix-400 font-bold text-lg mb-1">{t.footerContent.trust.gdpr}</div>
					<div class="text-gray-500 text-sm">{t.footerContent.trust.gdprSubtext}</div>
				</div>
				<div>
					<div class="text-formalogix-400 font-bold text-lg mb-1">{t.footerContent.trust.accuracy}</div>
					<div class="text-gray-500 text-sm">{t.footerContent.trust.accuracySubtext}</div>
				</div>
				<div>
					<div class="text-formalogix-400 font-bold text-lg mb-1">{t.footerContent.trust.pagesProcessed}</div>
					<div class="text-gray-500 text-sm">{t.footerContent.trust.pagesProcessedSubtext}</div>
				</div>
				<div>
					<div class="text-formalogix-400 font-bold text-lg mb-1">{t.footerContent.trust.responseTime}</div>
					<div class="text-gray-500 text-sm">{t.footerContent.trust.responseTimeSubtext}</div>
				</div>
			</div>
		</div>

		<div class="text-center text-sm text-gray-400">
			<div class="flex justify-center gap-4 mb-4">
				<a href={getLink('/datenschutz')} class="hover:text-white transition-colors">{t.footerContent.legal.privacy}</a>
				<span class="text-gray-600">|</span>
				<a href={getLink('/impressum')} class="hover:text-white transition-colors">{t.footerContent.legal.imprint}</a>
				<span class="text-gray-600">|</span>
				<a href={getLink('/agb')} class="hover:text-white transition-colors">{t.footerContent.legal.terms}</a>
			</div>
			<p>&copy; 2026 formalogix. {t.footerContent.legal.copyright}</p>
		</div>
	</div>
</footer>
