---
import { getLocaleFromPath, getTranslations } from '../../i18n';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
---

<!-- Services Section -->
<section id="services" class="py-24 bg-gray-50">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<h2 class="text-3xl font-bold text-center mb-6 text-gray-900 scroll-reveal">{t.services.title}</h2>
		<p class="text-center text-gray-600 mb-16 max-w-2xl mx-auto scroll-reveal">
			{t.services.subtitle}
		</p>

		<div class="grid md:grid-cols-3 gap-6 md:gap-8">
			<!-- Full-Service -->
			<div class="bg-white rounded-xl shadow-lg p-4 sm:p-6 md:p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border-2 border-formalogix-500 relative scroll-reveal flex flex-col">
				<div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-formalogix-500 text-white px-4 py-1 rounded-full text-base font-semibold animate-gentle-pulse">
					{t.services.popular}
				</div>
				<div class="w-12 h-12 bg-gradient-to-br from-formalogix-500 to-formalogix-600 rounded-lg flex items-center justify-center mb-6">
					<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
					</svg>
				</div>
				<h3 class="text-2xl font-bold mb-2 text-gray-900">{t.services.fullService.title}</h3>
				<p class="text-sm text-transparent bg-clip-text bg-gradient-to-r from-formalogix-600 to-formalogix-700 font-semibold mb-4">{t.services.fullService.tagline}</p>
				<p class="text-gray-600 mb-6 hidden sm:block">
					{t.services.fullService.description}
				</p>
				<ul class="space-y-3 mb-8">
					<li class="flex items-start">
						<svg class="w-5 h-5 text-formalogix-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-sm text-gray-600">{t.services.fullService.features.accuracy}</span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-formalogix-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-sm text-gray-600">{t.services.fullService.features.turnaround}</span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-formalogix-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-sm text-gray-600">{t.services.fullService.features.output}</span>
					</li>
				</ul>
				<a href="#contact" class="mt-auto block text-center bg-formalogix-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-formalogix-600 transition-colors">
					{t.services.fullService.cta}
				</a>
			</div>

			<!-- Enterprise -->
			<div class="bg-white rounded-xl shadow-lg p-4 sm:p-6 md:p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 scroll-reveal flex flex-col border-2 border-purple-500">
				<div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-6">
					<svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
					</svg>
				</div>
				<h3 class="text-2xl font-bold mb-2 text-gray-900">{t.services.enterprise.title}</h3>
				<p class="text-sm text-formalogix-600 font-semibold mb-4">{t.services.enterprise.tagline}</p>
				<p class="text-gray-600 mb-6 hidden sm:block">
					{t.services.enterprise.description}
				</p>
				<ul class="space-y-3 mb-8">
					<li class="flex items-start">
						<svg class="w-5 h-5 text-formalogix-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-sm text-gray-600">{t.services.enterprise.features.workflows}</span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-formalogix-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-sm text-gray-600">{t.services.enterprise.features.integration}</span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-formalogix-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-sm text-gray-600">{t.services.enterprise.features.support}</span>
					</li>
				</ul>
				<a href="#contact" class="mt-auto block text-center border-2 border-formalogix-500 text-formalogix-500 px-6 py-3 rounded-lg font-semibold hover:bg-formalogix-50 transition-colors">
					{t.services.enterprise.cta}
				</a>
			</div>

			<!-- Self-Service -->
			<div class="bg-white rounded-xl shadow-lg p-4 sm:p-6 md:p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 scroll-reveal flex flex-col border-2 border-formalogix-green-500">
				<div class="w-12 h-12 bg-formalogix-green-100 rounded-lg flex items-center justify-center mb-6">
					<svg class="w-6 h-6 text-formalogix-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
					</svg>
				</div>
				<h3 class="text-2xl font-bold mb-2 text-gray-900">{t.services.selfService.title}</h3>
				<p class="text-sm text-formalogix-600 font-semibold mb-4">{t.services.selfService.tagline}</p>
				<p class="text-gray-600 mb-6 hidden sm:block">
					{t.services.selfService.description}
				</p>
				<ul class="space-y-3 mb-8">
					<li class="flex items-start">
						<svg class="w-5 h-5 text-formalogix-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-sm text-gray-600">{t.services.selfService.features.analysis}</span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-formalogix-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-sm text-gray-600">{t.services.selfService.features.api}</span>
					</li>
					<li class="flex items-start">
						<svg class="w-5 h-5 text-formalogix-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span class="text-sm text-gray-600">{t.services.selfService.features.flexible}</span>
					</li>
				</ul>
				<a href="https://app.formalogix.com" class="mt-auto block text-center border-2 border-formalogix-500 text-formalogix-500 px-6 py-3 rounded-lg font-semibold hover:bg-formalogix-50 transition-colors">
					{t.services.selfService.cta}
				</a>
			</div>
		</div>
	</div>
</section>
