---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import SimplePricingCalculator from '../../components/SimplePricingCalculator';
import DynamicPricingBreakdown from '../../components/DynamicPricingBreakdown';
import Footer from '../../components/sections/Footer.astro';
import { getLocaleFromPath, getTranslations } from '../../i18n';
import { getRegionFromLocale } from '../../config/pricing';
import { useCaseImages } from '../../config/usecase-images';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
const region = getRegionFromLocale(locale);
---

<Layout title="Pricing & Calculator | formalogix">
	<!-- Navigation -->
	<Navigation />

	<!-- Hero Section -->
	<section class="bg-white py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Pricing & Calculator
				</h1>
				<p class="text-xl text-gray-600 max-w-3xl mx-auto">
					Transparent pricing. All cost factors discussed upfront. Calculate your savings with our pricing calculator.
				</p>
			</div>
		</div>
	</section>

	<!-- Detailed Pricing Breakdown -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-4 text-gray-900">Detailed Pricing Overview</h2>
			<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
				Our pricing is modular â€“ only pay for the services you need.
			</p>

			<DynamicPricingBreakdown initialLocale={locale} initialRegion={region} client:load />
		</div>
	</section>

	<!-- How We Calculate -->
	<section class="py-16 bg-gradient-to-br from-formalogix-600 to-formalogix-800">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-4 text-white">How We Calculate</h2>
			<div class="grid md:grid-cols-3 gap-8 mt-12">
				<div class="text-center">
					<div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="font-bold text-white mb-2">Clear Base Prices</h3>
					<p class="text-blue-100 text-sm">
						Simple pricing structure as your starting point
					</p>
				</div>

				<div class="text-center">
					<div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
						</svg>
					</div>
					<h3 class="font-bold text-white mb-2">Open Communication</h3>
					<p class="text-blue-100 text-sm">
						Additional costs for special cases discussed upfront
					</p>
				</div>

				<div class="text-center">
					<div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
						</svg>
					</div>
					<h3 class="font-bold text-white mb-2">Guaranteed Savings</h3>
					<p class="text-blue-100 text-sm">
						Despite custom pricing: 70-85% cheaper than manual processing
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Pricing Calculator Section -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-4 text-gray-900">Pricing Calculator</h2>
			<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
				Use our calculator for an initial estimate of your costs and savings.
			</p>
			<div class="mb-12">
				<SimplePricingCalculator initialLocale={locale} initialRegion={region} client:load />
			</div>
		</div>
	</section>

	<!-- FAQ Section -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-12 text-gray-900">
				{t.pricing.faq.title}
			</h2>
			<div class="space-y-6">
				{t.pricing.faq.questions.map((faq) => (
					<details class="bg-white rounded-lg shadow-md p-6 group">
						<summary class="font-semibold text-gray-900 cursor-pointer list-none flex items-center justify-between">
							<span>{faq.q}</span>
							<svg class="w-5 h-5 text-formalogix-500 transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
							</svg>
						</summary>
						<p class="mt-4 text-gray-600">
							{faq.a}
						</p>
					</details>
				))}
			</div>
		</div>
	</section>

	<!-- Crosslinks to Use Cases -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-2xl font-bold text-center mb-8 text-gray-900">Success Stories from Various Industries</h2>
			<div class="grid md:grid-cols-3 gap-8">
				<!-- Use Case 1: Building Insurance -->
				<a
					href="/en/use-cases/gebaudeversicherung"
					class="group bg-white rounded-xl shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 overflow-hidden"
				>
					<div style="aspect-ratio: 16/9;" class="overflow-hidden">
						<picture>
							<source srcset={`${useCaseImages.buildingInsurance.url}.webp`} type="image/webp">
							<img
								src={`${useCaseImages.buildingInsurance.url}.jpg`}
								alt={useCaseImages.buildingInsurance.alt[locale]}
								loading="lazy"
								class="use-case-card-image"
							>
						</picture>
					</div>
					<div class="p-6 sm:p-8">
						<h3 class="text-2xl font-bold mb-2 text-gray-900">{t.useCases.buildingInsurance.title}</h3>
						<p class="text-sm bg-gradient-to-r from-blue-500 to-blue-600 text-white px-3 py-1 rounded-full font-semibold mb-3 inline-block">{t.useCases.buildingInsurance.volume}</p>
						<p class="text-sm text-gray-600 mb-4">
							{t.useCases.buildingInsurance.description}
						</p>

						<div class="flex items-center text-formalogix-500 font-semibold text-sm group-hover:text-formalogix-600">
							{t.common.learnMore}
							<svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
							</svg>
						</div>
					</div>
				</a>

				<!-- Use Case 2: GDPR Event -->
				<a
					href="/en/use-cases/dsgvo-eventanmeldung"
					class="group bg-white rounded-xl shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 overflow-hidden"
				>
					<div style="aspect-ratio: 16/9;" class="overflow-hidden">
						<picture>
							<source srcset={`${useCaseImages.gdprEvent.url}.webp`} type="image/webp">
							<img
								src={`${useCaseImages.gdprEvent.url}.jpg`}
								alt={useCaseImages.gdprEvent.alt[locale]}
								loading="lazy"
								class="use-case-card-image"
							>
						</picture>
					</div>
					<div class="p-6 sm:p-8">
						<h3 class="text-2xl font-bold mb-2 text-gray-900">{t.useCases.gdprEvent.title}</h3>
						<p class="text-sm bg-gradient-to-r from-purple-500 to-purple-600 text-white px-3 py-1 rounded-full font-semibold mb-3 inline-block">{t.useCases.gdprEvent.volume}</p>
						<p class="text-sm text-gray-600 mb-4">
							{t.useCases.gdprEvent.description}
						</p>

						<div class="flex items-center text-formalogix-500 font-semibold text-sm group-hover:text-formalogix-600">
							{t.common.learnMore}
							<svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
							</svg>
						</div>
					</div>
				</a>

				<!-- Use Case 3: Trade Fair Raffle -->
				<a
					href="/en/use-cases/messegewinnspiel"
					class="group bg-white rounded-xl shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 overflow-hidden"
				>
					<div style="aspect-ratio: 16/9;" class="overflow-hidden">
						<picture>
							<source srcset={`${useCaseImages.tradeFairRaffle.url}.webp`} type="image/webp">
							<img
								src={`${useCaseImages.tradeFairRaffle.url}.jpg`}
								alt={useCaseImages.tradeFairRaffle.alt[locale]}
								loading="lazy"
								class="use-case-card-image"
							>
						</picture>
					</div>
					<div class="p-6 sm:p-8">
						<h3 class="text-2xl font-bold mb-2 text-gray-900">{t.useCases.tradeFairRaffle.title}</h3>
						<p class="text-sm bg-gradient-to-r from-orange-500 to-orange-600 text-white px-3 py-1 rounded-full font-semibold mb-3 inline-block">{t.useCases.tradeFairRaffle.volume}</p>
						<p class="text-sm text-gray-600 mb-4">
							{t.useCases.tradeFairRaffle.description}
						</p>

						<div class="flex items-center text-formalogix-500 font-semibold text-sm group-hover:text-formalogix-600">
							{t.common.learnMore}
							<svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
							</svg>
						</div>
					</div>
				</a>
			</div>
		</div>
	</section>

	<Footer />
</Layout>
