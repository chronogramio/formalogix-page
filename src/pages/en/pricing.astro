---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import SimplePricingCalculator from '../../components/SimplePricingCalculator';
import DynamicPricingBreakdown from '../../components/DynamicPricingBreakdown';
import Footer from '../../components/sections/Footer.astro';
import { getLocaleFromPath, getTranslations } from '../../i18n';
import { getRegionFromLocale } from '../../config/pricing';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
const region = getRegionFromLocale(locale);
---

<Layout title="Pricing & Calculator | Formalogix">
	<!-- Navigation -->
	<Navigation />

	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-formalogix-50 to-white py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Pricing & Calculator
				</h1>
				<p class="text-xl text-gray-600 max-w-3xl mx-auto">
					Transparent pricing without hidden costs. Calculate your savings with our pricing calculator.
				</p>
			</div>
		</div>
	</section>

	<!-- Detailed Pricing Breakdown -->
	<section class="py-16 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-4 text-gray-900">Detailed Pricing Overview</h2>
			<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
				Our pricing is modular – only pay for the services you need.
			</p>

			<DynamicPricingBreakdown initialLocale={locale} initialRegion={region} client:load />
		</div>
	</section>

	<!-- Why Transparent Pricing -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-4 text-gray-900">Why Transparent Pricing?</h2>
			<div class="grid md:grid-cols-3 gap-8 mt-12">
				<div class="text-center">
					<div class="w-16 h-16 bg-formalogix-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900 mb-2">No Hidden Costs</h3>
					<p class="text-gray-600 text-sm">
						You only pay for the services you actually use – no surprises.
					</p>
				</div>

				<div class="text-center">
					<div class="w-16 h-16 bg-formalogix-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900 mb-2">Scalable Pricing</h3>
					<p class="text-gray-600 text-sm">
						From small pilot projects to large-scale orders – our pricing grows with your needs.
					</p>
				</div>

				<div class="text-center">
					<div class="w-16 h-16 bg-formalogix-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900 mb-2">Guaranteed Savings</h3>
					<p class="text-gray-600 text-sm">
						Most clients save 70-85% of costs compared to manual data entry.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Pricing Calculator Section -->
	<section class="py-16 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-4 text-gray-900">Pricing Calculator</h2>
			<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
				Use our calculator for an initial estimate of your costs and savings.
			</p>
			<div class="mb-12">
				<SimplePricingCalculator initialLocale={locale} initialRegion={region} client:load />
			</div>
		</div>
	</section>

	<!-- FAQ Section -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-12 text-gray-900">
				{t.pricing.faq.title}
			</h2>
			<div class="space-y-6">
				{t.pricing.faq.questions.map((faq) => (
					<details class="bg-white rounded-lg shadow-md p-6 group">
						<summary class="font-semibold text-gray-900 cursor-pointer list-none flex items-center justify-between">
							<span>{faq.q}</span>
							<svg class="w-5 h-5 text-formalogix-500 transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
							</svg>
						</summary>
						<p class="mt-4 text-gray-600">
							{faq.a}
						</p>
					</details>
				))}
			</div>
		</div>
	</section>

	<!-- Crosslinks to Use Cases -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-2xl font-bold text-center mb-8 text-gray-900">Success Stories from Various Industries</h2>
			<div class="grid md:grid-cols-3 gap-8">
				<a href="/en/use-cases/gebaudeversicherung" class="group bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
					<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
						<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
						</svg>
					</div>
					<h3 class="text-xl font-bold mb-2 text-gray-900">Property Insurance</h3>
					<p class="text-sm text-blue-600 font-semibold mb-3">103,000 Forms</p>
					<p class="text-sm text-gray-600 mb-4">
						156 fields per form, various handwriting since 1996, complex signature verification.
					</p>
					<div class="flex items-center text-formalogix-500 font-semibold text-sm">
						Learn more
						<svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</div>
				</a>
				<a href="/en/use-cases/dsgvo-eventanmeldung" class="group bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
					<div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
						<svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
						</svg>
					</div>
					<h3 class="text-xl font-bold mb-2 text-gray-900">GDPR Event Registration</h3>
					<p class="text-sm text-purple-600 font-semibold mb-3">15,000 Registrations</p>
					<p class="text-sm text-gray-600 mb-4">
						Handwritten event registrations with GDPR consent forms digitized and processed.
					</p>
					<div class="flex items-center text-formalogix-500 font-semibold text-sm">
						Learn more
						<svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</div>
				</a>
				<a href="/en/use-cases/messegewinnspiel" class="group bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
					<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
						<svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
						</svg>
					</div>
					<h3 class="text-xl font-bold mb-2 text-gray-900">Trade Fair Raffle Wholesale</h3>
					<p class="text-sm text-orange-600 font-semibold mb-3">8,000 Entry Forms</p>
					<p class="text-sm text-gray-600 mb-4">
						Handwritten raffle entry forms from a trade fair digitized.
					</p>
					<div class="flex items-center text-formalogix-500 font-semibold text-sm">
						Learn more
						<svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</div>
				</a>
			</div>
		</div>
	</section>

	<Footer />
</Layout>
