---
import Layout from '../../../layouts/Layout.astro';
import { getTranslations } from '../../../i18n';

const t = getTranslations('en');
const useCase = t.useCases.buildingInsurance;
---

<Layout title={useCase.hero.title + " | Formalogix Success Story"}>
	<!-- Navigation (same as main page) -->
	<nav class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex justify-between items-center h-16">
				<div class="flex items-center">
					<a href="/en" class="flex items-center space-x-2">
						<img src="/logo.svg" alt="Formalogix Logo" class="h-8 w-auto" />
						<span class="text-xl font-bold text-gray-900">formalogix</span>
					</a>
				</div>
				<div class="flex items-center space-x-4">
					<a href="/en" class="text-gray-700 hover:text-formalogix-500 transition-colors">← Back to Homepage</a>
					<a href="https://app.formalogix.com" class="bg-formalogix-500 text-white px-4 py-2 rounded-lg hover:bg-formalogix-600 transition-colors">
						To App
					</a>
				</div>
			</div>
		</div>
	</nav>

	<!-- Breadcrumbs -->
	<div class="bg-gray-50 border-b border-gray-200 py-3">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex items-center text-sm text-gray-600">
				<a href="/en" class="hover:text-formalogix-500">Home</a>
				<svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
				</svg>
				<a href="/en#usecases" class="hover:text-formalogix-500">Success Stories</a>
				<svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
				</svg>
				<span class="text-gray-900 font-medium">Property Insurance</span>
			</div>
		</div>
	</div>

	<!-- Hero Section (de-emphasized metrics) -->
	<section class="py-12 bg-gradient-to-br from-blue-50 to-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto">
				<div class="flex items-center mb-6">
					<div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center mr-6">
						<svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
						</svg>
					</div>
					<div>
						<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">{useCase.hero.title}</h1>
						<p class="text-xl text-gray-600">{useCase.hero.subtitle}</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- The Problem Section (expanded) -->
	<section class="py-12 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-3xl font-bold text-gray-900 mb-6">{useCase.problem.title}</h2>
				<p class="text-lg text-gray-700 mb-6">
					{useCase.problem.intro}
				</p>

				<!-- Challenges list -->
				<div class="bg-red-50 border-l-4 border-red-500 p-6 mb-6">
					<h3 class="text-xl font-bold text-red-900 mb-4">The Challenges in Detail</h3>
					<ul class="space-y-3">
						{useCase.problem.challenges.map((challenge) => (
							<li class="flex items-start">
								<svg class="w-6 h-6 text-red-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
								</svg>
								<span class="text-gray-700">{challenge}</span>
							</li>
						))}
					</ul>
				</div>
			</div>
		</div>
	</section>

	<!-- Initial Condition Section (new) -->
	<section class="py-12 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-3xl font-bold text-gray-900 mb-6">{useCase.situation.title}</h2>
				<p class="text-lg text-gray-700">
					{useCase.situation.description}
				</p>
			</div>
		</div>
	</section>

	<!-- Solution Section (expanded) -->
	<section class="py-12 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-3xl font-bold text-gray-900 mb-6">{useCase.solution.title}</h2>
				<div class="bg-formalogix-50 border-l-4 border-formalogix-500 p-6 mb-6">
					<p class="text-lg text-gray-800 mb-4">
						{useCase.solution.description}
					</p>
				</div>

				<!-- Solution steps -->
				<div class="grid md:grid-cols-2 gap-4">
					{useCase.solution.steps.map((step, index) => (
						<div class="bg-white rounded-lg p-6 shadow-md border border-gray-200">
							<div class="flex items-start">
								<div class="text-3xl font-bold text-formalogix-500 mr-4">
									{index + 1}.
								</div>
								<p class="text-gray-700">{step}</p>
							</div>
						</div>
					))}
				</div>
			</div>
		</div>
	</section>

	<!-- Results Section (restructured - focus on outcomes) -->
	<section class="py-12 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-3xl font-bold text-gray-900 mb-6">{useCase.results.title}</h2>

				<!-- Outcomes list -->
				<div class="grid md:grid-cols-2 gap-6 mb-8">
					{useCase.results.outcomes.map((outcome) => (
						<div class="bg-white rounded-lg p-6 shadow-md">
							<div class="flex items-start">
								<svg class="w-8 h-8 text-green-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
								<p class="text-gray-700">{outcome}</p>
							</div>
						</div>
					))}
				</div>
			</div>
		</div>
	</section>

	<!-- Metrics Summary Box (moved down) -->
	<section class="py-8 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto">
				<div class="bg-gradient-to-r from-blue-50 via-green-50 to-formalogix-50 rounded-xl p-8 shadow-lg">
					<h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
						Project at a Glance
					</h3>
					<div class="grid grid-cols-2 md:grid-cols-4 gap-6">
						{Object.entries(useCase.results.metrics).map(([key, value]) => (
							<div class="text-center">
								<div class="text-3xl font-bold text-formalogix-600 mb-2">
									{value}
								</div>
								<div class="text-sm text-gray-600 uppercase font-semibold">
									{key === 'forms' ? 'Forms' : key === 'fields' ? 'Fields' : key === 'timeframe' ? 'Timeframe' : 'Accuracy'}
								</div>
							</div>
						))}
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Customer Quote -->
	<section class="py-12 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto">
				<blockquote class="bg-white border-l-4 border-formalogix-500 pl-8 py-6 italic shadow-lg rounded-r-lg">
					<p class="text-xl text-gray-700 mb-4">
						"{useCase.quote.text}"
					</p>
					<cite class="text-sm font-semibold text-gray-600 not-italic flex items-center">
						<svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
						</svg>
						{useCase.quote.author}
					</cite>
				</blockquote>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-12 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto">
				<div class="bg-gradient-to-r from-formalogix-500 to-formalogix-600 rounded-xl p-8 text-center text-white">
					<h2 class="text-3xl font-bold mb-4">{t.useCases.ctaQuestion}</h2>
					<p class="text-lg mb-6 opacity-90">
						Schedule a free consultation now and learn how Formalogix can transform your form processing.
					</p>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a href="/en#contact" class="bg-white text-formalogix-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors inline-block">
							{t.useCases.cta}
						</a>
						<a href="/en#pricing" class="bg-formalogix-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-formalogix-800 transition-colors inline-block">
							Calculate Savings
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Other Use Cases (show 2 others) -->
	<section class="py-12 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-2xl font-bold text-gray-900 mb-6">More Success Stories</h2>
				<div class="grid md:grid-cols-2 gap-6">
					<!-- GDPR Event -->
					<a href="/en/use-cases/dsgvo-eventanmeldung" class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow">
						<div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
							<svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
							</svg>
						</div>
						<h3 class="font-bold text-gray-900 mb-2">{t.useCases.gdprEvent.title}</h3>
						<p class="text-sm text-gray-600">{t.useCases.gdprEvent.volume} → GDPR compliant</p>
					</a>
					<!-- Trade Fair Raffle -->
					<a href="/en/use-cases/messegewinnspiel" class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow">
						<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
							<svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
							</svg>
						</div>
						<h3 class="font-bold text-gray-900 mb-2">{t.useCases.tradeFairRaffle.title}</h3>
						<p class="text-sm text-gray-600">{t.useCases.tradeFairRaffle.volume} → 3 days</p>
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Footer (simplified) -->
	<footer class="bg-gray-900 text-white py-8">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center">
				<p class="text-gray-400">&copy; 2024 Formalogix. All rights reserved.</p>
				<div class="mt-4 space-x-4">
					<a href="/en/datenschutz" class="text-gray-400 hover:text-white transition-colors">Privacy</a>
					<a href="/en/impressum" class="text-gray-400 hover:text-white transition-colors">Imprint</a>
					<a href="/en/agb" class="text-gray-400 hover:text-white transition-colors">Terms</a>
				</div>
			</div>
		</div>
	</footer>
</Layout>
