---
import UseCaseTemplate from '../../../components/UseCaseTemplate.astro';
import { getTranslations } from '../../../i18n';

const t = getTranslations('en');
const useCase = t.useCases.buildingInsurance;

const metricsLabels = {
	forms: 'Forms',
	fields: 'Fields',
	timeframe: 'Timeframe',
	accuracy: 'Accuracy'
};
---

<UseCaseTemplate
	useCase={useCase}
	translations={t}
	locale="en"
	useCaseKey="buildingInsurance"
	themeColor="blue"
	breadcrumbTitle="Property Insurance"
	metricsLabels={metricsLabels}
/>
