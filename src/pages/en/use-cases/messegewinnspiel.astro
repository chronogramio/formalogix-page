---
import UseCaseTemplate from '../../../components/UseCaseTemplate.astro';
import { getTranslations } from '../../../i18n';

const t = getTranslations('en');
const useCase = t.useCases.tradeFairRaffle;

const metricsLabels = {
	forms: 'Forms',
	timeframe: 'Timeframe',
	timeSaved: 'Hours Saved',
	workDaysSaved: 'Work Days Saved'
};
---

<UseCaseTemplate
	useCase={useCase}
	translations={t}
	locale="en"
	useCaseKey="tradeFairRaffle"
	themeColor="blue"
	breadcrumbTitle="Trade Fair Raffle"
	metricsLabels={metricsLabels}
/>
