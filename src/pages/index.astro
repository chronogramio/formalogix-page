---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';
import PricingCalculator from '../components/PricingCalculator';
import MobileMenu from '../components/MobileMenu';
import ProcessVisualization from '../components/ProcessVisualization.astro';
---

<Layout title="Formalogix - Handschrift in strukturierte Daten">
	<!-- Navigation -->
	<nav class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex justify-between items-center h-16">
				<div class="flex items-center">
					<a href="/" class="flex items-center space-x-2">
						<img src="/logo.svg" alt="Formalogix Logo" class="h-8 w-auto" />
						<span class="text-xl font-bold text-gray-900">formalogix</span>
					</a>
				</div>
				<div class="hidden md:flex space-x-8">
					<a href="#services" class="text-gray-700 hover:text-formalogix-500 transition-colors">Lösungen</a>
					<a href="#usecases" class="text-gray-700 hover:text-formalogix-500 transition-colors">Erfolgsgeschichten</a>
					<a href="#pricing" class="text-gray-700 hover:text-formalogix-500 transition-colors">ROI Rechner</a>
					<a href="#contact" class="text-gray-700 hover:text-formalogix-500 transition-colors">Demo buchen</a>
				</div>
				<div class="flex items-center space-x-4">
					<a href="https://app.formalogix.com" class="bg-formalogix-500 text-white px-4 py-2 rounded-lg hover:bg-formalogix-600 transition-colors">
						Zur App
					</a>
					<MobileMenu client:load />
				</div>
			</div>
		</div>
	</nav>

	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-formalogix-50 via-white to-formalogix-50 py-20 relative overflow-hidden">
		<!-- Background decoration -->
		<div class="absolute inset-0 opacity-5">
			<div class="absolute top-10 left-10 w-72 h-72 bg-formalogix-500 rounded-full blur-3xl"></div>
			<div class="absolute bottom-10 right-10 w-96 h-96 bg-formalogix-500 rounded-full blur-3xl"></div>
		</div>

		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<div class="animate-fade-in-up">
					<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
						Handschriftliche Formulare professionell digitalisieren
					</h1>
					<p class="text-xl text-gray-600 mb-8 leading-relaxed">
						Effiziente Automatisierung mit menschlicher Qualitätssicherung. Formalogix konvertiert handschriftliche Formulare in Stunden statt Wochen – mit KI-Geschwindigkeit und 99,8% Genauigkeit.
					</p>
					<div class="flex flex-col sm:flex-row gap-4">
						<a href="#pricing" class="btn-primary text-center inline-block">
							Potenzial berechnen
						</a>
						<a href="#usecases" class="btn-secondary text-center inline-block">
							Prozess ansehen
						</a>
					</div>
				</div>
				<div class="bg-white rounded-xl shadow-2xl p-8 md:p-12 animate-fade-in-up" style="animation-delay: 0.2s;">
					<!-- Abstract visualization: Input -> Output -->
					<ProcessVisualization />
					<!-- To revert to the original image, uncomment below and remove <ProcessVisualization /> above:
					<img
						src="/formalogix-process.png"
						alt="Formalogix Process - Von handschriftlichen Formularen zu strukturierten Daten"
						class="w-full rounded-lg"
						loading="eager"
					/>
					<p class="text-sm text-gray-500 mt-4 text-center font-medium">
						Von handschriftlichen Formularen zu strukturierten Daten
					</p>
					-->
				</div>
			</div>
		</div>
	</section>

	<!-- Efficiency Comparison Section -->
	<section class="py-20 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-gray-900">
				Effizienzvergleich: Manuell vs. Automatisiert
			</h2>
			<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
				Professionelle Automatisierung optimiert Ihre Prozesse messbar.
			</p>

			<div class="grid md:grid-cols-2 gap-8 mb-8">
				<!-- Manual Processing -->
				<div class="bg-slate-50 border-2 border-slate-200 rounded-xl p-8">
					<div class="flex items-center mb-6">
						<svg class="w-8 h-8 text-slate-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
						</svg>
						<h3 class="text-2xl font-bold text-gray-900">Manuelle Verarbeitung:</h3>
					</div>
					<ul class="space-y-3 mb-6">
						<li class="flex items-start">
							<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
							</svg>
							<span class="text-gray-700"><strong>3-4 Wochen Durchlaufzeit</strong> für größere Mengen</span>
						</li>
						<li class="flex items-start">
							<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
							</svg>
							<span class="text-gray-700"><strong>Schwankende Fehlerquote</strong> bei hohem Volumen</span>
						</li>
						<li class="flex items-start">
							<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
							</svg>
							<span class="text-gray-700"><strong>Begrenzte Skalierbarkeit</strong></span>
						</li>
						<li class="flex items-start">
							<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
							</svg>
							<span class="text-gray-700"><strong>Personalintensive Prozesse</strong></span>
						</li>
						<li class="flex items-start">
							<svg class="w-5 h-5 text-slate-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
							</svg>
							<span class="text-gray-700"><strong>Verzögerte</strong> Datenverfügbarkeit</span>
						</li>
					</ul>
					<div class="info-neutral">
						<p class="text-sm text-gray-700">
							Beispiel: 50.000 Formulare jährlich erfordern mehrere Vollzeitmitarbeiter und Wochen Bearbeitungszeit
						</p>
					</div>
				</div>

				<!-- Formalogix Automated (Solution) -->
				<div class="bg-blue-50 border-2 border-blue-200 rounded-xl p-8">
					<div class="flex items-center mb-6">
						<svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
