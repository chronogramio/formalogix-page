---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import SimplePricingCalculator from '../components/SimplePricingCalculator';
import DynamicPricingBreakdown from '../components/DynamicPricingBreakdown';
import ContactFormModal from '../components/ContactFormModal';
import Footer from '../components/sections/Footer.astro';
import { getLocaleFromPath, getTranslations } from '../i18n';
import { getRegionFromLocale } from '../config/pricing';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
const region = getRegionFromLocale(locale);
---

<Layout title="Preise & Preisrechner | Formalogix">
	<!-- Navigation -->
	<Navigation />

	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-formalogix-50 to-white py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Preise & Preisrechner
				</h1>
				<p class="text-xl text-gray-600 max-w-3xl mx-auto">
					Transparente Preisgestaltung ohne versteckte Kosten. Berechnen Sie Ihre Einsparungen mit unserem Preisrechner.
				</p>
			</div>
		</div>
	</section>

	<!-- Detailed Pricing Breakdown -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-4 text-gray-900">Detaillierte Preisübersicht</h2>
			<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
				Unsere Preise sind modular aufgebaut – bezahlen Sie nur für die Services, die Sie benötigen.
			</p>

			<DynamicPricingBreakdown initialLocale={locale} initialRegion={region} client:load />
		</div>
	</section>

	<!-- Why Transparent Pricing -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-4 text-gray-900">Warum transparente Preisgestaltung?</h2>
			<div class="grid md:grid-cols-3 gap-8 mt-12">
				<div class="text-center">
					<div class="w-16 h-16 bg-formalogix-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900 mb-2">Keine versteckten Kosten</h3>
					<p class="text-gray-600 text-sm">
						Sie zahlen nur für die Services, die Sie wirklich nutzen – ohne Überraschungen.
					</p>
				</div>

				<div class="text-center">
					<div class="w-16 h-16 bg-formalogix-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900 mb-2">Skalierbare Preise</h3>
					<p class="text-gray-600 text-sm">
						Von kleinen Pilotprojekten bis zu Großaufträgen – unsere Preise wachsen mit Ihrem Bedarf.
					</p>
				</div>

				<div class="text-center">
					<div class="w-16 h-16 bg-formalogix-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-formalogix-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="font-bold text-gray-900 mb-2">Garantierte Einsparungen</h3>
					<p class="text-gray-600 text-sm">
						Die meisten Kunden sparen 70-85% der Kosten im Vergleich zu manueller Erfassung.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Pricing Calculator Section -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-4 text-gray-900">Preisrechner</h2>
			<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
				Nutzen Sie unseren Kalkulator für eine erste Schätzung Ihrer Kosten und Einsparungen.
			</p>
			<div class="mb-12">
				<SimplePricingCalculator initialLocale={locale} initialRegion={region} client:load />
			</div>
		</div>
	</section>

	<!-- FAQ Section -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold text-center mb-12 text-gray-900">
				{t.pricing.faq.title}
			</h2>
			<div class="space-y-6">
				{t.pricing.faq.questions.map((faq) => (
					<details class="bg-white rounded-lg shadow-md p-6 group">
						<summary class="font-semibold text-gray-900 cursor-pointer list-none flex items-center justify-between">
							<span>{faq.q}</span>
							<svg class="w-5 h-5 text-formalogix-500 transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
							</svg>
						</summary>
						<p class="mt-4 text-gray-600">
							{faq.a}
						</p>
					</details>
				))}
			</div>
		</div>
	</section>

	<!-- Crosslinks to Use Cases -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-2xl font-bold text-center mb-8 text-gray-900">Erfolgsgeschichten aus verschiedenen Branchen</h2>
			<div class="grid md:grid-cols-3 gap-8">
				<a href="/use-cases/gebaudeversicherung" class="group bg-white rounded-xl shadow-lg p-6 sm:p-8 border-l-4 border-blue-500 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
					<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
						<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
						</svg>
					</div>
					<h3 class="text-2xl font-bold mb-2 text-gray-900">Gebäudeversicherung</h3>
					<p class="text-sm bg-gradient-to-r from-blue-500 to-blue-600 text-white px-3 py-1 rounded-full font-semibold mb-3 inline-block">103.000 Formulare</p>
					<p class="text-sm text-gray-600 mb-4">
						156 Felder pro Formular, unterschiedliche Handschriften seit 1996, komplexe Signaturprüfung.
					</p>
					<div class="flex items-center text-formalogix-500 font-semibold text-sm group-hover:text-formalogix-600">
						Mehr erfahren
						<svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</div>
				</a>
				<a href="/use-cases/dsgvo-eventanmeldung" class="group bg-white rounded-xl shadow-lg p-6 sm:p-8 border-l-4 border-purple-500 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
					<div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
						<svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
						</svg>
					</div>
					<h3 class="text-2xl font-bold mb-2 text-gray-900">DSGVO-konforme Eventanmeldung</h3>
					<p class="text-sm bg-gradient-to-r from-purple-500 to-purple-600 text-white px-3 py-1 rounded-full font-semibold mb-3 inline-block">15.000 Anmeldungen</p>
					<p class="text-sm text-gray-600 mb-4">
						Handschriftliche Eventanmeldungen mit DSGVO-Einwilligungen digitalisiert und verarbeitet.
					</p>
					<div class="flex items-center text-formalogix-500 font-semibold text-sm group-hover:text-formalogix-600">
						Mehr erfahren
						<svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</div>
				</a>
				<a href="/use-cases/messegewinnspiel" class="group bg-white rounded-xl shadow-lg p-6 sm:p-8 border-l-4 border-orange-500 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
					<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
						<svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
						</svg>
					</div>
					<h3 class="text-2xl font-bold mb-2 text-gray-900">Messegewinnspiel Großhandel</h3>
					<p class="text-sm bg-gradient-to-r from-orange-500 to-orange-600 text-white px-3 py-1 rounded-full font-semibold mb-3 inline-block">8.000 Teilnahmezettel</p>
					<p class="text-sm text-gray-600 mb-4">
						Handschriftliche Gewinnspiel-Teilnahmeformulare von einer Fachmesse digitalisiert.
					</p>
					<div class="flex items-center text-formalogix-500 font-semibold text-sm group-hover:text-formalogix-600">
						Mehr erfahren
						<svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</div>
				</a>
			</div>
		</div>
	</section>

	<!-- Contact Form Modal -->
	<ContactFormModal client:load />

	<Footer />
</Layout>

<script>
	// Handle contact modal button click
	document.getElementById('open-contact-modal')?.addEventListener('click', () => {
		window.dispatchEvent(new CustomEvent('openContactModal'));
	});
</script>
