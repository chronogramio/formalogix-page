---
import UseCaseTemplate from '../../components/UseCaseTemplate.astro';
import { getTranslations } from '../../i18n';

const t = getTranslations('de');
const useCase = t.useCases.gdprEvent;

const metricsLabels = {
	forms: 'Formulare',
	timeframe: 'Zeitrahmen',
	processing: 'Integration',
	compliance: 'DSGVO-konform'
};
---

<UseCaseTemplate
	useCase={useCase}
	translations={t}
	locale="de"
	useCaseKey="gdprEvent"
	themeColor="blue"
	breadcrumbTitle="DSGVO-Eventanmeldung"
	metricsLabels={metricsLabels}
/>
