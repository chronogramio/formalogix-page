---
import UseCaseTemplate from '../../components/UseCaseTemplate.astro';
import { getTranslations } from '../../i18n';

const t = getTranslations('de');
const useCase = t.useCases.tradeFairRaffle;

const metricsLabels = {
	forms: 'Formulare',
	timeframe: 'Zeitrahmen',
	timeSaved: 'Stunden gespart',
	workDaysSaved: 'Arbeitstage gespart'
};
---

<UseCaseTemplate
	useCase={useCase}
	translations={t}
	locale="de"
	useCaseKey="tradeFairRaffle"
	themeColor="blue"
	breadcrumbTitle="Messegewinnspiel"
	metricsLabels={metricsLabels}
/>
